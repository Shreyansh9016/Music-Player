    <stroke android:color="#99CCCC" android:width="5dp" /> <!-- Ring color and thickness -->
    <size android:width="260dp" android:height="260dp" /> <!-- Size of the ring -->
    <corners android:radius="130dp"/> <!-- Make the edges circular -->
